@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<style>
    .privacy-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 80vh;
        text-align: center;
        font-family: Arial, sans-serif;
        padding: 50px 20px;
    }

    .privacy-header h1 {
        color: #0d6efd; /* Soft blue */
        margin-bottom: 20px;
    }

    .privacy-content {
        font-size: 1rem;
        color: #495057;
        margin-bottom: 40px;
    }

    .btn-back {
        text-decoration: none;
        padding: 8px 15px;
        border-radius: 5px;
        background-color: #6c757d; /* Gray button */
        color: #fff;
        font-size: 0.9rem;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }
</style>

<div class="privacy-wrapper">

    <!-- Header -->
    <div class="privacy-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <!-- Content -->
    <div class="privacy-content">
        <p>We respect your privacy and ensure that your personal information is protected. Data is used solely to provide and improve our services.</p>
    </div>

    <!-- Back Button -->
    <a asp-page="Index" class="btn-back">Back to Home</a>

</div>