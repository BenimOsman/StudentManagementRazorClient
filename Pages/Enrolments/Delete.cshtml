@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Enrolments.DeleteModel
@{
    ViewData["Title"] = "Delete Enrolment";
}

<h2 class="mb-4">Delete Enrolment</h2>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Enrolment ID</dt>
        <dd class="col-sm-9">@Model.Enrolment.EnrolmentId</dd>

        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">
            <strong>@Model.StudentName</strong>
            <span class="text-muted">(ID: @Model.Enrolment.StudentId)</span>
        </dd>

        <dt class="col-sm-3">Course</dt>
        <dd class="col-sm-9">
            <strong>@Model.CourseName</strong>
            <span class="text-muted">(ID: @Model.Enrolment.CourseId)</span>
        </dd>

        <dt class="col-sm-3">Joining Date</dt>
        <dd class="col-sm-9">@Model.Enrolment.JoiningDate.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-3">Grade</dt>
        <dd class="col-sm-9">@Model.Enrolment.Grade</dd>
    </dl>
</div>

<div class="mt-3">
    <form method="post">
        <input type="hidden" asp-for="Enrolment.EnrolmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>