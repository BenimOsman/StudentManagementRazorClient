@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Enrolments.EditModel
@{
    ViewData["Title"] = "Edit Enrolment";
}

<h2 class="mb-4">Edit Enrolment</h2>

<div class="card shadow-sm p-4 w-50">
    <form method="post">
        <input type="hidden" asp-for="Enrolment.EnrolmentId" />

        <!-- Student Dropdown -->
        <div class="mb-3">
            <label asp-for="Enrolment.StudentId" class="form-label">Student</label>
            <select asp-for="Enrolment.StudentId" class="form-select" asp-items="@(new SelectList(Model.Students, "StudentId", "Name"))">
                <option value="">-- Select Student --</option>
            </select>
            <span asp-validation-for="Enrolment.StudentId" class="text-danger"></span>
        </div>

        <!-- Course Dropdown -->
        <div class="mb-3">
            <label asp-for="Enrolment.CourseId" class="form-label">Course</label>
            <select asp-for="Enrolment.CourseId" class="form-select" asp-items="@(new SelectList(Model.Courses, "CourseId", "Title"))">
                <option value="">-- Select Course --</option>
            </select>
            <span asp-validation-for="Enrolment.CourseId" class="text-danger"></span>
        </div>

        <!-- Joining Date -->
        <div class="mb-3">
            <label asp-for="Enrolment.JoiningDate" class="form-label">Joining Date</label>
            <input asp-for="Enrolment.JoiningDate" class="form-control" type="date" />
            <span asp-validation-for="Enrolment.JoiningDate" class="text-danger"></span>
        </div>

        <!-- Grade -->
        <div class="mb-3">
            <label asp-for="Enrolment.Grade" class="form-label">Grade</label>
            <input asp-for="Enrolment.Grade" class="form-control" />
            <span asp-validation-for="Enrolment.Grade" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>