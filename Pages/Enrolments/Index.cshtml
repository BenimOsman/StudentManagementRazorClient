@page
@model StudentManagementRazorClientApp.Pages.Enrolments.IndexModel
@{
    ViewData["Title"] = "Enrolments List"; // Set the page title
}

<!-- Center page content -->
<div class="d-flex flex-column align-items-center mt-5">

    <!-- Page Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4">Enrolments</h1>
        <a class="btn btn-success mt-2" asp-page="Create">
            <i class="bi bi-plus-circle"></i> Create New Enrolment
        </a>
    </div>

    <!-- Table container -->
    <div class="w-75">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Student</th>            <!-- Display StudentName -->
                    <th>Course</th>             <!-- Display CourseName -->
                    <th>Joining Date</th>       <!-- Display JoiningDate -->
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Enrolments != null && Model.Enrolments.Count > 0)
                {
                    @foreach (var enrolment in Model.Enrolments)
                    {
                        <tr>
                            <td>@enrolment.StudentName</td>        <!-- Show Student Name -->
                            <td>@enrolment.CourseName</td>         <!-- Show Course Name -->
                            <td>@enrolment.JoiningDate.ToShortDateString()</td>  <!-- Format date -->
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a class="btn btn-info btn-sm text-white" asp-page="Details" asp-route-id="@enrolment.EnrolmentId">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@enrolment.EnrolmentId">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@enrolment.EnrolmentId">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            No enrolments found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>