@page
@model StudentManagementRazorClientApp.Pages.Enrolments.CreateModel
@{
    ViewData["Title"] = "Create Enrolment";
}

<h2>Create Enrolment</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Enrolment.StudentId">Student</label>
        <select asp-for="Enrolment.StudentId" class="form-select" asp-items="@(new SelectList(Model.Students, "StudentId", "Name"))">
            <option value="">-- Select Student --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Enrolment.CourseId">Course</label>
        <select asp-for="Enrolment.CourseId" class="form-select" asp-items="@(new SelectList(Model.Courses, "CourseId", "Title"))">
            <option value="">-- Select Course --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Enrolment.JoiningDate"></label>
        <input asp-for="Enrolment.JoiningDate" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="Enrolment.Grade"></label>
        <input asp-for="Enrolment.Grade" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>