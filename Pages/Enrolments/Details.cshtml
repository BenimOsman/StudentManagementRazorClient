@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Enrolments.DetailsModel
@{
    ViewData["Title"] = "Enrolment Details";
}

<div class="d-flex flex-column align-items-center mt-5">

    <!-- Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4">Enrolment Details</h1>
        <a class="btn btn-secondary mt-2" asp-page="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <!-- Details Card -->
    <div class="card w-50 shadow-sm p-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Enrolment ID</dt>
                <dd class="col-sm-8">@Model.Enrolment.EnrolmentId</dd>

                <dt class="col-sm-4">Student</dt>
                <dd class="col-sm-8">@Model.StudentName</dd>

                <dt class="col-sm-4">Course</dt>
                <dd class="col-sm-8">@Model.CourseName</dd>

                <dt class="col-sm-4">Joining Date</dt>
                <dd class="col-sm-8">@Model.Enrolment.JoiningDate.ToString("dd-MM-yyyy")</dd>

                <dt class="col-sm-4">Grade</dt>
                <dd class="col-sm-8">@Model.Enrolment.Grade</dd>
            </dl>
        </div>
    </div>
</div>