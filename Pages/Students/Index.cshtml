@page
@model StudentManagementRazorClientApp.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students List";                                                                        // Set the page title
}

<!-- Center everything on the page -->
<div class="d-flex flex-column align-items-center mt-5">

    <!-- Page Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4">Students</h1>
        <a class="btn btn-success mt-2" asp-page="Create">
            <i class="bi bi-plus-circle"></i> Create New Student
        </a>
    </div>

    <!-- Table to display students -->
    <div class="w-75">
        <!-- Limit table width -->
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Students != null && Model.Students.Count > 0)
                {
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Age</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@student.StudentId">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a class="btn btn-info btn-sm text-white" asp-page="Details" asp-route-id="@student.StudentId">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@student.StudentId">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">
                            No students found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>