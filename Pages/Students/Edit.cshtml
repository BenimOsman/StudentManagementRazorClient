@page
@model StudentManagementRazorClientApp.Pages.Students.EditModel
@{
    ViewData["Title"] = "Edit Student";
}

<div class="d-flex flex-column align-items-center mt-5">

    <div class="mb-4 text-center">
        <h1 class="display-4">Edit Student</h1>
        <a class="btn btn-secondary mt-2" asp-page="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <div class="w-50">
        <form method="post" class="shadow-sm p-4 rounded bg-light">
            @* Anti-forgery token (safe to add explicitly) *@
            @Html.AntiForgeryToken()

            @* Hidden ID so PUT uses the correct route *@
            <input asp-for="Student.StudentId" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Student.Name" class="form-label">Name</label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Student.Age" class="form-label">Age</label>
                <input asp-for="Student.Age" class="form-control" type="number" />
                <span asp-validation-for="Student.Age" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}