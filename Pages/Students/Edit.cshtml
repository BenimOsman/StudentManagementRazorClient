@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Students.EditModel
@{
    ViewData["Title"] = "Edit Student";
}

<h1>Edit Student</h1>

<form method="post">
    <input type="hidden" asp-for="Student.StudentId" />
    <div class="form-group">
        <label asp-for="Student.Name"></label>
        <input asp-for="Student.Name" class="form-control" />
        <span asp-validation-for="Student.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Age"></label>
        <input asp-for="Student.Age" class="form-control" />
        <span asp-validation-for="Student.Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>