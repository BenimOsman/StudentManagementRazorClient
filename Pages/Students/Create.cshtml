@page
@model StudentManagementRazorClientApp.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Create Student";                                                                   // Page title
}

<!-- Centered page content -->
<div class="d-flex flex-column align-items-center mt-5">

    <!-- Page Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4">Create New Student</h1>
        <a class="btn btn-secondary mt-2" asp-page="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <!-- Form Container -->
    <div class="w-50">
        <form method="post" class="shadow-sm p-4 rounded bg-light">

            <!-- Name Input -->
            <div class="mb-3">
                <label asp-for="Student.Name" class="form-label">Name</label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>

            <!-- Age Input -->
            <div class="mb-3">
                <label asp-for="Student.Age" class="form-label">Age</label>
                <input asp-for="Student.Age" type="number" class="form-control" />
                <span asp-validation-for="Student.Age" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Create
                </button>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
}