@page
@model StudentManagementRazorClientApp.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<div class="d-flex flex-column align-items-center mt-5">

    <!-- Page Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4 text-danger">Delete Student</h1>
        <a class="btn btn-secondary mt-2" asp-page="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <!-- Delete Confirmation Card -->
    <div class="card shadow-sm w-50 p-4 text-center">
        <h5>Are you sure you want to delete this student?</h5>
        <h5><strong>Name:</strong> @Model.Student.Name</h5>
        <h5><strong>Age:</strong> @Model.Student.Age</h5>

        <form method="post" class="mt-4">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a class="btn btn-secondary" asp-page="Index">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>