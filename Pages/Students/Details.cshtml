@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <h4>Name: @Model.Student.Name</h4>
    <h4>Age: @Model.Student.Age</h4>
</div>

<p>
    <a asp-page="Edit" asp-route-id="@Model.Student.StudentId" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</p>