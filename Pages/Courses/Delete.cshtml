@page
@model StudentManagementRazorClientApp.Pages.Courses.DeleteModel
@{
    ViewData["Title"] = "Delete Course";
}

<div class="d-flex flex-column align-items-center mt-5">

    <!-- Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4 text-danger">Delete Course</h1>
        <a class="btn btn-secondary mt-2" asp-page="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <!-- Confirmation Card -->
    <div class="card w-50 shadow-sm p-3 text-center">
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this course?</h5>
            <p class="card-text">Title: @Model.Course.Title</p>
            <p class="card-text">Credits: @Model.Course.Credits</p>

            <form method="post">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a class="btn btn-secondary" asp-page="Index">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>