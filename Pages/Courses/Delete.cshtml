@page
@model StudentManagementRazorClientApp.Pages.Courses.DeleteModel
@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<p>Are you sure you want to delete this course?</p>

<div class="mb-3">
    <label>Title:</label>
    <p>@Model.Course.Title</p>
</div>

<div class="mb-3">
    <label>Credits:</label>
    <p>@Model.Course.Credits</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>