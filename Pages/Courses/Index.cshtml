@page
@model StudentManagementRazorClientApp.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Courses List";                                                                         // Set page title
}

<!-- Center everything on the page -->
<div class="d-flex flex-column align-items-center mt-5">

    <!-- Page Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4">Courses</h1>
        <a class="btn btn-success mt-2" asp-page="Create">
            <i class="bi bi-plus-circle"></i> Create New Course
        </a>
    </div>

    <!-- Table to display courses -->
    <div class="w-75">
        <!-- Limit table width -->
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>                 <!-- Column for Course Title -->
                    <th>Credits</th>               <!-- Column for Course Credits -->
                    <th class="text-center">Actions</th> <!-- Actions column -->
                </tr>
            </thead>
            <tbody>
                @if (Model.Courses != null && Model.Courses.Count > 0)
                {
                    @foreach (var course in Model.Courses)
                    {
                        <tr>
                            <td>@course.Title</td>       <!-- Display course title -->
                            <td>@course.Credits</td>     <!-- Display course credits -->
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@course.CourseId">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a class="btn btn-info btn-sm text-white" asp-page="Details" asp-route-id="@course.CourseId">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@course.CourseId">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">
                            No courses found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>