@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
}

<div class="d-flex flex-column align-items-center mt-5">

    <!-- Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4">Edit Course</h1>
        <a class="btn btn-secondary mt-2" asp-page="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <!-- Form -->
    <div class="w-50">
        <form method="post" class="shadow-sm p-4 rounded bg-light">
            @Html.AntiForgeryToken()

            <!-- Hidden field for CourseId -->
            <input asp-for="Course.CourseId" type="hidden" />

            <!-- Validation summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Course.Title" class="form-label">Title</label>
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Course.Credits" class="form-label">Credits</label>
                <input asp-for="Course.Credits" class="form-control" type="number" />
                <span asp-validation-for="Course.Credits" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}