@page "{id:int}"
@model StudentManagementRazorClientApp.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
}

<h2>Edit Course</h2>

<form method="post">
    <!-- NEW: ensure the primary key is posted -->
    <input type="hidden" asp-for="Course.CourseId" />

    <!-- (Optional) show any server-side errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Course.Title" class="form-label"></label>
        <input asp-for="Course.Title" class="form-control" />
        <span asp-validation-for="Course.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Course.Credits" class="form-label"></label>
        <input asp-for="Course.Credits" class="form-control" />
        <span asp-validation-for="Course.Credits" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>