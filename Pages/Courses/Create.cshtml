@page
@model StudentManagementRazorClientApp.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "Create Course";
}

<!-- Centered page content -->
<div class="d-flex flex-column align-items-center mt-5">

    <!-- Page Header -->
    <div class="mb-4 text-center">
        <h1 class="display-4">Create New Course</h1>
        <a class="btn btn-secondary mt-2" asp-page="Index">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <!-- Form Container -->
    <div class="w-50">
        <form method="post" class="shadow-sm p-4 rounded bg-light">

            <div class="mb-3">
                <label asp-for="Course.Title" class="form-label">Title</label>
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Course.Credits" class="form-label">Credits</label>
                <input asp-for="Course.Credits" type="number" class="form-control" />
                <span asp-validation-for="Course.Credits" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Create
                </button>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}